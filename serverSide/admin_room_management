<?php
session_start();
if (!isset($_SESSION['is_admin']) || !$_SESSION['is_admin']) {
    header("Location: login.php");
    exit();
}

include 'config.php'; // Database connection

// Fetch all rooms from the database
try {
    $stmt = $pdo->prepare("SELECT * FROM rooms");
    $stmt->execute();
    $rooms = $stmt->fetchAll(PDO::FETCH_ASSOC);
} catch (Exception $e) {
    die("Error fetching rooms: " . $e->getMessage());
}

?>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Room Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <h1 class="text-center">Manage Rooms</h1>
        <a href="admin_dashboard.php" class="btn btn-secondary mb-3">Back to Dashboard</a>
        
        <!-- Table displaying rooms -->
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Capacity</th>
                    <th>Equipment</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <?php foreach ($rooms as $room): ?>
                    <tr>
                        <td><?= htmlspecialchars($room['id']) ?></td>
                        <td><?= htmlspecialchars($room['name']) ?></td>
                        <td><?= htmlspecialchars($room['capacity']) ?></td>
                        <td><?= htmlspecialchars($room['equipment']) ?></td>
                        <td>
                            <a href="edit_room.php?id=<?= $room['id'] ?>" class="btn btn-warning btn-sm">Edit</a>
                            <a href="delete_room.php?id=<?= $room['id'] ?>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
                        </td>
                    </tr>
                <?php endforeach; ?>
            </tbody>
        </table>

        <!-- Add Room Form -->
        <h2 class="mt-5">Add New Room</h2>
        <form action="add_room.php" method="POST" class="row g-3">
            <div class="col-md-4">
                <label for="name" class="form-label">Room Name</label>
                <input type="text" id="name" name="name" class="form-control" required>
            </div>
            <div class="col-md-4">
                <label for="capacity" class="form-label">Capacity</label>
                <input type="number" id="capacity" name="capacity" class="form-control" required>
            </div>
            <div class="col-md-4">
                <label for="equipment" class="form-label">Equipment</label>
                <input type="text" id="equipment" name="equipment" class="form-control">
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-success">Add Room</button>
            </div>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
